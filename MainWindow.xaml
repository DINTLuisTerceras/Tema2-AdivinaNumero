<Window x:Class="ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejercicio1"
        mc:Ignorable="d"
        Title="Adivina el numero" Height="200" Width="500" Icon="assets/basketball.ico">
    <Grid>
        <TextBlock x:Name="introTextBlock" HorizontalAlignment="Left" Margin="26,40,0,0" Text="¿Qué numero estoy pensando?" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="pistaTextBlock" HorizontalAlignment="Left" Margin="345,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="" Width="137"/>
        <TextBox x:Name="numberTextBox" HorizontalAlignment="Left" Margin="211,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="checkButton" Content="Comprobar" HorizontalAlignment="Left" Margin="48,98,0,0" VerticalAlignment="Top" Click="checkButton_Click" Height="35" Width="70"/>
        <Button x:Name="resetButton" Content="Reiniciar" HorizontalAlignment="Left" Margin="176,98,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.51,-0.251" Click="resetButton_Click" Height="35" Width="74"/>
    </Grid>
</Window>
